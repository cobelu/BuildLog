<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>

<GridPane
	fx:controller="com.cobelu.build_log.controller.EntryEditorController"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10"
	vgap="10">
	<padding>
		<Insets top="40" right="40" bottom="40" left="40" />
	</padding>
	<columnConstraints>
		<ColumnConstraints minWidth="100" prefWidth="100"
			maxWidth="Infinity" halignment="RIGHT">
		</ColumnConstraints>
		<ColumnConstraints minWidth="200" prefWidth="200"
			maxWidth="Infinity" hgrow="ALWAYS">
		</ColumnConstraints>
	</columnConstraints>

	<!-- Add Header Label -->
	<Label text="Edit an Entry" GridPane.columnIndex="0"
		GridPane.rowIndex="0" GridPane.columnSpan="2" GridPane.rowSpan="1"
		GridPane.halignment="CENTER">
		<font>
			<Font size="24"></Font>
		</font>
		<GridPane.margin>
			<Insets top="20" right="0" bottom="20" left="0"></Insets>
		</GridPane.margin>
	</Label>


	<!-- Add Date Label -->
	<Label text="Date: " GridPane.columnIndex="0"
		GridPane.rowIndex="1">
	</Label>

	<!-- Add Date Picker -->
	<DatePicker fx:id="datePicker" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="1" />


	<!-- Add Minutes Label -->
	<Label text="Minutes: " GridPane.columnIndex="0"
		GridPane.rowIndex="2">
	</Label>

	<!-- Add Minutes Text Field -->
	<TextField fx:id="minutesTextField" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="2" />

	<!-- Add Category Label -->
	<Label text="Category: " GridPane.columnIndex="0"
		GridPane.rowIndex="3">
	</Label>
	
	<!-- Add Category Combo Box -->
	<TextField fx:id="categoryTextField" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="3" />

	<!-- Add Title Label -->
	<Label text="Title: " GridPane.columnIndex="0"
		GridPane.rowIndex="4">
	</Label>

	<!-- Add Title Text Field -->
	<TextField fx:id="titleTextField" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="4" />


	<!-- Add Description Label -->
	<Label text="Description: " GridPane.columnIndex="0"
		GridPane.rowIndex="5">
	</Label>

	<!-- Add Minutes Text Field -->
	<TextField fx:id="descriptionTextField" prefHeight="40"
		GridPane.columnIndex="1" GridPane.rowIndex="5" />


	<!-- Add Submit Button -->
	<Button fx:id="submitButton" text="Submit" prefWidth="100"
		prefHeight="40" defaultButton="true" GridPane.columnIndex="0"
		GridPane.rowIndex="6" GridPane.columnSpan="2" GridPane.rowSpan="1"
		GridPane.halignment="CENTER" onAction="#handleSubmitButtonAction">
		<GridPane.margin>
			<Insets top="20" right="0" bottom="20" left="0"></Insets>
		</GridPane.margin>
	</Button>

</GridPane>
